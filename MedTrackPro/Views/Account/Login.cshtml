@model DataLibrary.ViewModels.Account.LoginViewModel


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
                <div class="text-center">
                    <h1>Login Page</h1>
                </div>
                <form method="post" asp-controller="Account" asp-action="Login">
                <div class="mt-2">
                        <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control rounded-2" placeholder="Email" type="text" />
                    </div>
                <div class="mt-2">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control rounded-2" placeholder="Password" type="password" />
                    </div>
                <div class="d-flex align-items-center mt-2">
                    <input asp-for="RememberMe" class="rounded-2" type="checkbox" />
                    <label asp-for="RememberMe" class="">Remember Me</label>
                </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary rounded-2">Login</button>
                    </div>
                </form>
            </div>
    </div>
</div>